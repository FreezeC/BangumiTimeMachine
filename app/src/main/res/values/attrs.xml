<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="Section">
        <attr name="sectionColorIcon" format="color" />
        <attr name="sectionColorText" format="color" />
        <attr name="sectionColorNotification" format="color" />
        <attr name="sectionBackgroundColorPressed" format="color" />
        <attr name="sectionBackgroundColorSelected" format="color" />
        <attr name="sectionBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="Subheader">
        <attr name="subheaderTitleColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="MainDrawer">
        <attr name="sectionStyle" format="reference" />
        <attr name="subheaderStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SubjectsCardView">
        <attr name="title_text" format="string"/>
        <attr name="title_textSize" format="dimension"/>
        <attr name="title_textColor" format="color"/>
        <attr name="title_background" format="color"/>
        <attr name="container_background" format="color"/>
        <attr name="subject_pressedColor" format="color" />
    </declare-styleable>
</resources>